# Server Config
PORT=3000
NODE_ENV=development

# JWT Config
JWT_SECRET=your_super_secret_key_min_32_characters
JWT_EXPIRE=7d

# Database (nếu cần MongoDB/PostgreSQL sau)
DATABASE_URL=mongodb://localhost:27017/culturevault

# AWS Storage (cho hình ảnh di sản)
AWS_ACCESS_KEY_ID=your_key
AWS_SECRET_ACCESS_KEY=your_secret
AWS_REGION=ap-southeast-1
S3_BUCKET_NAME=culturevault-heritage

# Email Service (thông báo/báo cáo)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=CultureVault <noreply@culturevault.com>

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs